.body
  display flex;
  align-items center
  justify-content center
  flex-direction column
  color #28FC91
  align-self center
  border 2px solid #28FC91
  margin 2em
  padding 1em

.button
  color #28FC91

.form
  display flex
  flex-direction column
  justify-content space-between

.form
  & > div
    margin 5px
    width 160px
    display flex
    justify-content baseline

.formButtons
  display flex
  flex 1 1 auto
  justify-content space-between